<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryanty.materialdesignproject.NavigationDrawerFragment"
    android:background="@color/navBackgroundColor">

    <!-- cover image container -->
    <LinearLayout
        android:id="@+id/containerCoverImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:src="@mipmap/ic_cover"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <!-- recycle view -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerCoverImage">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
